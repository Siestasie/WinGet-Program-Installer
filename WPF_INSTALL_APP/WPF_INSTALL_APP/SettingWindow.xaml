<Window x:Class="WPF_INSTALL_APP.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:local="clr-namespace:WPF_INSTALL_APP"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="300"
        ResizeMode="NoResize"
        Background="#293133">
    <Grid>
        <Canvas>
            <Grid Height="434" Width="300">
                <CheckBox x:Name="CreateFileCommand" Content="CreateFileCommand" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" BorderBrush="#FF553096" Background="#FF6237AF" IsChecked="False" Checked="CreateFileCommand_Checked" Unchecked="CreateFileCommand_Unchecked">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </Grid>
        </Canvas>
    </Grid>
</Window>
